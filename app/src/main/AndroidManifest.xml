<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mihaljevic.miroslav.foundry.slimplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mihaljevic.miroslav.foundry.slimplayer.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mihaljevic.miroslav.foundry.slimplayer.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity android:name="mihaljevic.miroslav.foundry.slimplayer.SongListActivity" />

        <service
            android:name="mihaljevic.miroslav.foundry.slimplayer.MediaPlayerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="mihaljevic.miroslav.foundry.slimplayer.AddToPlaylistActivity" />
        <activity android:name="mihaljevic.miroslav.foundry.slimplayer.BackHandledFragmentActivity"></activity>
    </application>

</manifest>